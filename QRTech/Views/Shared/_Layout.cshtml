<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>QR Tech hesap ekranı</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/style4.css">

    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js"></script>

</head>

<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>QR Tech</h3>
                <strong>QR</strong>
            </div>

            <ul class="list-unstyled components">
                <li class="active">
                <li>
                    <a id="clickHome" href="/"><i class="fas fa-home"></i> Anasayfa</a>
                </li>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li class="active">
                <li>
                    <a id="clickUserInfo" href="/Home/Ticket/"><i class="fas fa-ticket-alt"></i> Bilet Ödeme</a>
                </li>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><i class="fas fa-wallet"></i> Bakiye</a>

                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a id="clickPay" href="/Home/BalanceUpdate/">
                                <i class="fas fa-money-bill-wave"></i>
                                Bakiye Yükleme
                            </a>
                        </li>
                        <li>
                            <a id="clickSend" href="/Home/BalanceSend/">
                                <i class="fas fa-paper-plane"></i>
                                Bakiye Gönder
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li class="active">
                <li>
                    <a id="clickUserInfo" href="/Home/InformationUpdate/"><i class="fas fa-user"></i> Bilgilerim</a>
                </li>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li class="active">
                <li>
                    <a id="clickUserInfo" href="/Home/InformationPasswordUpdate/"><i class="fas fa-key"></i> Şifre Güncelle</a>
                </li>
                </li>
            </ul>
        </nav>

        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-book"></i>
                        <span>Menüyü göster/gizle</span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Login/" uiactions="delete">Çıkış</a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            @RenderBody()
        </div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#listTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            $("#clickStats").click(function () {
                $("#contentTable").toggle();
            });
        });   
    </script>
</body>
</html>