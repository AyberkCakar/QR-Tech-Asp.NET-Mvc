@model List<QRTech.Models.Station>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="wrapper">

    <!-- Page Content  -->
    <div id="content">

        <h2 style="padding: 20;">  Durak Listesi</h2>
        <br />
        <div class="row">

            <div class="col-md-6">
                <label>Search:<input id="searchInput" type="search" class="form-control form-control-sm" placeholder="" aria-controls="example"></label>
            </div>
        </div>
        <div class="table-responsive">
            <table id="listTable" style="width:100%" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Durak ID</th>
                        <th>Durak Adı</th>
                        <th>Durak İlçe</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.durakID</td>
                                <td>@item.durakAD</td>
                                <td>@item.ilceAdi</td>
                                <td>
                                    @Html.ActionLink("Güncelle", "StationEdit", new { id = item.durakID }, new { @class = "btn btn-primary btn-sm" })
                                    @Html.ActionLink("Sil", "StationDelete", new { id = item.durakID }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
