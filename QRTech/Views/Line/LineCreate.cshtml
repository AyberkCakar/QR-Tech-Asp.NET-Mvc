@using QRTech.Models
@model Tuple<Line, Price>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        Hat Ekleme İşlemi Başarıyla Gerçekleşti!
    </div>
}
else if (ViewBag.islem == -1)
{
    <div class="alert alert-danger" role="alert">
        Hat Ekleme İşlemi Başarısız!
    </div>
}
else
{

}

<div class="wrapper">

    <div id="content">
        <h2>  Hat Ekle</h2>
        <br />
        <div class="container-fluid">
            @using (Html.BeginForm("LineCreate", "Line", FormMethod.Post))
            {
                <form action="" class="was-validated">

                    <div class="form-group">
                        <label for="uname">Hat Adı:</label>
                        @Html.TextBoxFor(m => m.Item1.HatNo, null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Başlangıç Durağı:</label>
                        @Html.TextBoxFor(m => m.Item1.BaslangıçDurak, null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="e-posta">Bitiş Durağı:</label>
                        @Html.TextBoxFor(m => m.Item1.BitişDurak, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="e-posta">Normal Fiyat:</label>
                        @Html.TextBoxFor(m => m.Item2.tamFiyat, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="e-posta">Öğrenci Fiyat:</label>
                        @Html.TextBoxFor(m => m.Item2.ogrenciFiyat, null, new { @class = "form-control" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            }
        </div>
    </div>
</div>