@model QRTech.Models.Price
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        İndirim İşlemi Başarıyla Gerçekleşti!
    </div>
}
else if (ViewBag.islem == -1)
{
    <div class="alert alert-danger" role="alert">
        İndirim İşlemi Başarısız!
    </div>
}
else
{

}

<div class="wrapper">

    <div id="content">
        <h2>  İndirim Belirle</h2>
        <br />
        <div class="container-fluid">
            @using (Html.BeginForm("DiscountEdit", "Admin", FormMethod.Post))
            {
                <form action="" class="was-validated">
                    <div class="form-group">
                        <label for="e-posta">Normal Fiyat İndirimi Oranı (0 - 1 Arası ):</label>
                        @Html.TextBox("tamOran", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="e-posta">Öğrenci Fiyat İndirimi Oranı (0 - 1 Arası ):</label>
                        @Html.TextBox("ogrenciOran", "", new { @class = "form-control" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            }

        </div>
    </div>
</div>
