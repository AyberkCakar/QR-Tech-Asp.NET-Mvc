@model QRTech.Models.User
<br>
@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        Şifreniz Başarıyla Değişti!
    </div>
}
else if(ViewBag.islem ==-1)
{
    <div class="alert alert-danger" role="alert">
        Şifre Değiştirme Başarısız!
    </div>
}
else
{

}

@using (Html.BeginForm("InformationPasswordUpdate", "Home", FormMethod.Post))
{
    <form action="" class="was-validated">
        <div class="form-group">
            <label class="font-weight-bold">Kullanıcı Adı/TC Kimlik No:    @Model.TC</label><br><br>

            <div class="form-group">
                <label for="sifre">Mevcut Şifreniz:</label>
                @Html.Password("EskiSifre", "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="yeniSifre">Yeni Şifre:</label>
                @Html.Password("Sifre", "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="yeniSifreTekrar">Yeni Şifre Tekrar:</label>
                @Html.Password("SifreTekrar", "", new { @class = "form-control" })
            </div>

            <br>
            <button type="submit" class="btn btn-success">Şifre Güncelle</button>

        </div>
    </form>
}