@model QRTech.Models.Driver

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        Şoför Silme İşlemi Başarıyla Gerçekleşti!
    </div>
}
else if (ViewBag.islem == -1)
{
    <div class="alert alert-danger" role="alert">
        Şoför Silme İşlemi Başarısız!
    </div>
}
else
{

}

<div class="wrapper">

    <div id="content">
        <h2>  Şöför Sil</h2>
        <br />
        <div class="container-fluid">
            @using (Html.BeginForm("DriverDelete", "Driver", FormMethod.Post))
            {
                <form action="" class="was-validated">
                    <div class="form-group">
                        <label for="e-posta">Şoför ID:</label>
                        @Html.TextBox("soforID", @Model.soforID, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Şoför Adı:</label>
                        @Html.TextBox("AD", @Model.AD, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Soyadı:</label>
                        @Html.TextBox("Soyad", @Model.Soyad, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="e-posta">TC:</label>
                        @Html.TextBox("TC", @Model.TC, new { @class = "form-control" })
                    </div>

                    <br />
                    <button type="submit" class="btn btn-success">Sil</button>
                </form>
            }
        </div>
    </div>
</div>