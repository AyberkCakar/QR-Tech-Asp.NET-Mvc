@model List<QRTech.Models.Vehicle>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrapper">

    <!-- Page Content  -->
    <div id="content">

        <h2 style="padding: 20;">  Araç Listesi</h2>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label>Search:<input id="searchInput" type="search" class="form-control form-control-sm" placeholder="" aria-controls="example"></label>
            </div>
        </div>
        <div class="table-responsive">
            <table id="listTable" style="width:100%" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Araç ID</th>
                        <th>Araç Plaka</th>
                        <th>Araç Marka</th>
                        <th>Araç Model</th>
                        <th>Şase Numarası</th>
                        <th>Engelli Desteği</th>
                        <th>Kullanıldığı Hat</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.aracID</td>
                                <td>@item.Plaka</td>
                                <td>@item.AracMarka</td>
                                <td>@item.Model</td>
                                <td>@item.saseNumarasi</td>
                                <td>@item.engelliDestegi</td>
                                <td>@item.HatNo</td>
                                <td>
                                    @Html.ActionLink("Güncelle", "VehicleEdit", new { id = item.aracID }, new { @class = "btn btn-primary btn-sm" })
                                    @Html.ActionLink("Sil", "VehicleDelete", new { id = item.aracID }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
