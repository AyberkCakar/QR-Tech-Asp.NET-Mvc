@model QRTech.Models.Station

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        Durak Ekleme İşlemi Başarıyla Gerçekleşti!
    </div>
}
else if (ViewBag.islem == -1)
{
    <div class="alert alert-danger" role="alert">
        Durak Ekleme İşlemi Başarısız!
    </div>
}
else
{

}

<div class="wrapper">

    <div id="content">
        <h2>  Durak Ekle</h2>
        <br />
        <div class="container-fluid">
            @using (Html.BeginForm("StationCreate", "Station", FormMethod.Post))
            {
                <form action="" class="was-validated">

                    <div class="form-group">
                        <label for="uname">Durak Adı:</label>
                        @Html.TextBox("DurakAD", "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Durak İlçesi:</label>
                        @Html.TextBox("ilceAdi", "", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="e-posta">Durak Enlem:</label>
                        @Html.TextBox("enlem", "", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="e-posta">Durak Boylam:</label>
                        @Html.TextBox("boylam", "", new { @class = "form-control" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            }

        </div>
    </div>
</div>
