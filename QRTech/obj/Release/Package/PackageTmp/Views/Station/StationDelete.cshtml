@model QRTech.Models.Station
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (ViewBag.islem == 1)
{
    <div class="alert alert-success" role="alert">
        Durak Silme İşlemi Başarıyla Gerçekleşti!
    </div>
}
else if (ViewBag.islem == -1)
{
    <div class="alert alert-danger" role="alert">
        Durak Silme İşlemi Başarısız!
    </div>
}
else
{

}

<div class="wrapper">

    <div id="content">
        <h2>  Durak Sil</h2>
        <br />
        <div class="container-fluid">
            @using (Html.BeginForm("StationDelete", "Station", FormMethod.Post))
            {
                <form action="" class="was-validated">

                    <div class="form-group">
                        <label for="uname">Durak ID:</label>
                        @Html.TextBox("DurakID", @Model.durakID, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Durak Adı:</label>
                        @Html.TextBox("DurakAD", @Model.durakAD, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="uname">Durak İlçesi:</label>
                        @Html.TextBox("ilceAdi", @Model.ilceAdi, new { @class = "form-control" })
                    </div>
                    <br />
                    <button type="submit" class="btn btn-success">Sil</button>
                </form>
            }
        </div>
    </div>
</div>
